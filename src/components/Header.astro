---
import Icon from "./common/Icon.vue"
import { Picture } from "astro-imagetools/components"
import MobileNav from "./MobileNav.astro"
---

<header
  class="nav relative top-0 z-0 flex justify-around bg-bg1 font-sans text-text1"
>
  <nav class="container flex flex-nowrap items-center justify-between gap-6">
    <a class="header__title" href="/">
      <Picture src="/engsta_logo.png?h=80" alt="Engsta Rides Logo" />
    </a>

    <div class="hidden basis-7/12 items-center justify-end gap-5 sm:flex">
      <a href="/?scroll=true" class="nav__button">shirts</a>
      <a href="/swag" class="nav__button" rel="prefetch">swag</a>
      <a href="/auctions" class="nav__button" rel="prefetch">auctions</a>
      <a href="/blog" class="nav__button" rel="prefetch">blog</a>
      <a href="/about" class="nav__button" rel="prefetch">about</a>
      <a href="https://www.tiktok.com/@engstarides" class="nav__button">
        <Icon
          name="co-tiktok"
          scale="1.2"
          label="Engsta Rides Official Tiktok"
        />
      </a>
      <a href="https://www.instagram.com/engsta/" class="nav__button">
        <Icon
          name="pr-instagram"
          scale="1.5"
          label="Engsta Rides Official Instagram Page"
        />
      </a>
      <a href="https://www.etsy.com/shop/EngstaRides" class="nav__button">
        <Icon
          name="la-etsy"
          scale="1"
          label="Engsta Rides Official Etsy Page"
        />
      </a>
    </div>
    <div class="flex h-[37px] w-[50px] sm:hidden"><MobileNav /></div>
  </nav>
</header>
<style>
  .nav {
    position: relative;
    z-index: 99;
  }
  .nav__button {
    transition: all 0.2s ease-in;
    &:hover {
      transform: translateY(-0.2rem);
      color: rgb(var(--color-accent));
    }
  }
</style>
