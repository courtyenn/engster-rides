---
import Welcome from "../components/Welcome.astro";
import Shirts from "../components/Shirts.astro";
import Layout from "../layouts/Layout.astro";
import { getShirts } from "../utils/sanity";
import { BackgroundImage } from "astro-imagetools/components";

const shirts = await getShirts();
---

<Layout title="Engsta Rides" description="Shirts that make you go vroom vroom">
  <BackgroundImage
    src="/open_sky.jpeg"
    preload="jpeg"
    attributes={{
      container: {
        class: "h-[30rem] md:h-[500px] border-box md:pt-8 md:pb-16",
      },
    }}
    brightness={0.6}
  >
    <div
      class="flex h-full flex-col items-center justify-center pl-10 pr-10 md:gap-y-10 lg:pl-14 lg:pr-14"
    >
      <h1
        class="text-shadow text-lg uppercase tracking-wider text-light md:text-5xl"
      >
        Sitewide Sale
      </h1>
      <h2
        class="text-shadow text-center text-6xl font-bold uppercase leading-tight tracking-wide text-light md:text-7xl lg:text-8xl"
      >
        10% off all shirts
      </h2>
    </div>
  </BackgroundImage>
  <main class="container box-border flex flex-col gap-16 pb-32 pt-14">
    <h1 class="text-center">
      <em class="font-accent">NEWEST</em>
      <p class="text-graffiti text-4xl tracking-wider sm:text-5xl">
        Spray Paint
      </p>
      <em class="font-accent">COLLECTION</em>
    </h1>
    {shirts.length ? <Shirts shirts={shirts} /> : <Welcome />}

    <section class="mt-6 flex flex-col gap-y-6">
      <div class="text-center">
        <h1 class="text-center font-accent text-5xl">
          Find us at <br /><strong>Porsche Palooza</strong>
        </h1>
        <h2>November 8 - November 12</h2>
      </div>
      <img
        src="/palooza_2023_big.png"
        alt="PCA Palooza"
        class="ml-auto mr-auto max-h-80"
      />
    </section>
  </main>
</Layout>
