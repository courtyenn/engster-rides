---
import Layout from "../layouts/Layout.astro";
import { getBlogs } from "../utils/sanity";
import { default as BlogItem } from "../components/Blog.astro";
const blogs = await getBlogs();
---

<Layout
  title="Engsta Rides | Blog - Get latest news, updates, and tips."
  description="News for the best car-related gear, goods, and accessories. All in one place at Engsta Rides."
>
  <section class="">
    <div class="bg-slate-400 py-10">
      <h1 class="pageHeader2">Engsta Rides Blog</h1>
      <h2 class="pageSubHeader">Get the latest news, updates, and tips.</h2>
    </div>
    <ul class="grid grid-cols-2 gap-4">
      {blogs.map((blog) => <BlogItem blog={blog} />)}
    </ul>
  </section>
</Layout>
