---
// https://docs.astro.build/en/guides/view-transitions/
import { ViewTransitions } from "astro:transitions"
import SnipCart from "../components/SnipCart.astro"
import Footer from "../components/Footer.astro"
import GlobalStyles from "../components/GlobalStyles.astro"

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@500;700&family=Inter:wght@500;700;800&family=PT+Serif:ital,wght@0,400;0,700;1,400;1,700&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
    <!-- <ViewTransitions /> -->
  </head>
  <body>
    <GlobalStyles />
    <SnipCart transition:persist="snipcart-js" />
    <div class="container">
      <header class="header">
        <a class="header__title" href="/">Engster Rides</a>
      </header>
      <main>
        <slot />
      </main>
      <Footer />
    </div>
    <h1 transition:persist="test">Test</h1>
    <div id="snipcart" transition:persist="snipcart"></div>
  </body>
</html>
